@using Microsoft.AspNet.Identity;
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("Signout", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()
        <ul class="nav navbar-nav navbar-right">
            <li><a>@User.Identity.GetUserName()</a></li>
            <li><a href="javascript:document.getElementById('logoutForm').submit()"><span class="glyphicon glyphicon-log-out"></span> Выйти</a></li>
        </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li><a href="@Url.Action("Signup", "Account")"><span class="glyphicon glyphicon-user"></span> Регистрация</a></li>
        <li><a href="@Url.Action("Signin", "Account")"><span class="glyphicon glyphicon-log-in"></span> Войти</a></li>
    </ul>
}
