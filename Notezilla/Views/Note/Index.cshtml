@using Notezilla.Extensions
@model Notezilla.Models.NoteListViewModel
@{
    ViewBag.Title = "Мои заметки";
}

<h2>@ViewBag.Title</h2>

<hr />
@if (Model.Notes.Count != 0)
{
    <table class="table">
        <thead>
            <tr>
                <th>@Html.SortLink("Название", "Title", "Index", "Note")</th>
                <th>@Html.SortLink("Дата создания", "CreationDate", "Index", "Note")</th>
                <th>@Html.SortLink("Дата изменения", "ChangeDate", "Index", "Note")</th>
                <th>Теги</th>
                <th>Посмотреть файлы</th>
            </tr>
        </thead>
        <tbody>
            @Html.DisplayFor(model => model.Notes)
        </tbody>
    </table>
}
else
{
    <p class="text-center">У вас нет ни одной заметки</p>
}
<div class="container">
    <a href="@Url.Action("Create")" class="btn btn-success"><span class="glyphicon glyphicon-pencil"></span> Новая заметка</a>
</div>
